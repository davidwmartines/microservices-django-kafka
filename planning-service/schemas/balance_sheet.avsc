  "fields": [
    {
      "name": "id",
      "type": {"type": "string", "logicalType": "uuid"}
    },
    {
      "name": "person_id",
      "type": {"type": "string", "logicalType": "uuid"}
    },
    {
      "name": "date_calculated",
      "type": {"type": "long", "logicalType": "timestamp-millis"}
    },
    {
      "name": "assets",
      "type": "long"
    },
    {
      "name": "liabilities",
      "type": "long"
    }
  ]
}
